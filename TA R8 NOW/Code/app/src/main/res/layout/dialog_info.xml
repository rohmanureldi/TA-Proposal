<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvTitleProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produk"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvRatingProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="2"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="@id/star1"
        app:layout_constraintBottom_toBottomOf="@id/star1"
        app:layout_constraintStart_toEndOf="@id/star1"
        />

    <ImageView
        android:id="@+id/star1"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/tvTitleProduk"
        app:layout_constraintBottom_toBottomOf="@id/tvTitleProduk"
        app:layout_constraintStart_toEndOf="@id/tvTitleProduk"

        android:src="@drawable/ic_star"
        />

    <TextView
        android:id="@+id/tvProduk"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleProduk"
        app:layout_constraintStart_toStartOf="@id/tvTitleProduk"
        app:layout_constraintLeft_toLeftOf="@id/tvTitleProduk"
        />

    <TextView
        android:id="@+id/tvPelayanan"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitlePelayanan"
        app:layout_constraintStart_toStartOf="@id/tvTitlePelayanan"
        app:layout_constraintLeft_toLeftOf="@id/tvTitlePelayanan"
        />

    <TextView
        android:id="@+id/tvTitlePelayanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pelayanan"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/tvProduk"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvRatingPelayanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="2"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="@id/star2"
        app:layout_constraintBottom_toBottomOf="@id/star2"
        app:layout_constraintStart_toEndOf="@id/star2"
        />

    <ImageView
        android:id="@+id/star2"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/tvTitlePelayanan"
        app:layout_constraintBottom_toBottomOf="@id/tvTitlePelayanan"
        app:layout_constraintStart_toEndOf="@id/tvTitlePelayanan"
        android:src="@drawable/ic_star"
        />

    <TextView
        android:id="@+id/tvPengelolaan"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitlePengelolaan"
        app:layout_constraintStart_toStartOf="@id/tvTitlePengelolaan"
        app:layout_constraintLeft_toLeftOf="@id/tvTitlePengelolaan"
        />

    <TextView
        android:id="@+id/tvTitlePengelolaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pengelolaan"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/tvPelayanan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/tvRatingPengelolaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="2"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="@id/star3"
        app:layout_constraintBottom_toBottomOf="@id/star3"
        app:layout_constraintStart_toEndOf="@id/star3"
        />

    <ImageView
        android:id="@+id/star3"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/tvTitlePengelolaan"
        app:layout_constraintBottom_toBottomOf="@id/tvTitlePengelolaan"
        app:layout_constraintStart_toEndOf="@id/tvTitlePengelolaan"
        android:src="@drawable/ic_star"
        />




</androidx.constraintlayout.widget.ConstraintLayout>