<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:background="@drawable/main_background_border">

    <Button
        android:id="@+id/halal"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_halal_sign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/quran"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/ic_quran"
        app:layout_constraintTop_toTopOf="@id/halal"
        app:layout_constraintBottom_toBottomOf="@id/halal"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"/>

    <ImageButton
        android:id="@+id/no_porn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/no_porn"
        android:scaleY="1.5"
        app:layout_constraintBottom_toBottomOf="@id/halal"
        app:layout_constraintTop_toTopOf="@id/halal"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tersedia Quran"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/quran"
        app:layout_constraintEnd_toEndOf="@id/quran"
        app:layout_constraintStart_toStartOf="@id/quran"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Halal Foods"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/halal"
        app:layout_constraintEnd_toEndOf="@id/halal"
        app:layout_constraintStart_toStartOf="@id/halal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Porn Channel"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/no_porn"
        app:layout_constraintEnd_toEndOf="@id/no_porn"
        app:layout_constraintStart_toStartOf="@id/no_porn"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="SAVE"
        android:textColor="#D9FFFFFF"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/halal"
        app:layout_constraintStart_toStartOf="@id/halal"
        />

</android.support.constraint.ConstraintLayout>