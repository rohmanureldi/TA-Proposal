<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3AFFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_open_filter"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:elevation="3dp"
        android:background="@drawable/filter_button_background"
        android:layout_marginBottom="20dp"
        android:drawableStart="@drawable/ic_filter_list_black_24dp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:text="FILTER"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_filter"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:outlineProvider="bounds"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"
        >

        <Button
            android:id="@+id/btn_close_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLOSE"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="#30ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <Button
            android:id="@+id/btn_filter"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/button_background"
            android:text="FILTER"
            android:textColor="#faFFFFFF"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="@id/txt_item8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_close_filter"/>

        <TextView
            android:id="@+id/txt_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tersedia sajadah"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            />

        <CheckBox
            android:id="@+id/cb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/txt_item1"
            app:layout_constraintBottom_toBottomOf="@id/txt_item1"/>

        <TextView
            android:id="@+id/txt_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tersedia Al-Quran"
            app:layout_constraintTop_toTopOf="@id/txt_item1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            />

        <CheckBox
            android:id="@+id/cb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/txt_item2"
            app:layout_constraintBottom_toBottomOf="@id/txt_item2"/>

        <TextView
            android:id="@+id/txt_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak tersedia akses pornografi"
            app:layout_constraintTop_toTopOf="@id/txt_item2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            />

        <CheckBox
            android:id="@+id/cb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/txt_item3"
            app:layout_constraintBottom_toBottomOf="@id/txt_item3"/>

        <TextView
            android:id="@+id/txt_item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Makanan dan Minuman Halal"
            app:layout_constraintTop_toTopOf="@id/txt_item3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            />

        <CheckBox
            android:id="@+id/cb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/txt_item4"
            app:layout_constraintBottom_toBottomOf="@id/txt_item4"/>

        <TextView
            android:id="@+id/txt_item5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kamar mandi tertutup"
            app:layout_constraintTop_toTopOf="@id/txt_item4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            />

        <CheckBox
            android:id="@+id/cb5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/txt_item5"
            app:layout_constraintBottom_toBottomOf="@id/txt_item5"/>

        <TextView
            android:id="@+id/txt_item6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kolam renang tertutup"
            app:layout_constraintTop_toTopOf="@id/txt_item5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            />

        <CheckBox
            android:id="@+id/cb6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/txt_item6"
            app:layout_constraintBottom_toBottomOf="@id/txt_item6"/>

        <TextView
            android:id="@+id/txt_item7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ruangan spa tertutup"
            app:layout_constraintTop_toTopOf="@id/txt_item6"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            />

        <CheckBox
            android:id="@+id/cb7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/txt_item7"
            app:layout_constraintBottom_toBottomOf="@id/txt_item7"/>

        <TextView
            android:id="@+id/txt_item8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bahan spa halal"
            app:layout_constraintTop_toTopOf="@id/txt_item7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            />

        <CheckBox
            android:id="@+id/cb8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/txt_item8"
            app:layout_constraintBottom_toBottomOf="@id/txt_item8"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="2dp"
        android:outlineProvider="bounds"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_filter">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>